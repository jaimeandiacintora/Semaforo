<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semaforo.Pages.MainPage"
             xmlns:vm ="clr-namespace:Semaforo.ViewModels">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                BackgroundColor="{Binding ColorSemaforo1}"
                Command="{Binding encenderSemaforo1Command}"
                HeightRequest="220"
                WidthRequest="220"
                />
            <Button
                BackgroundColor="{Binding ColorSemaforo2}"
                Command="{Binding encenderSemaforo2Command}"
                HeightRequest="220"
                WidthRequest="220"
                />
            <Button
                BackgroundColor="{Binding ColorSemaforo3}"
                Command="{Binding encenderSemaforo3Command}"
                HeightRequest="220"
                WidthRequest="220"
                />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
